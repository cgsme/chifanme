<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">
            <!--1-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@color/white"
                android:orientation="vertical">

                <!--1.1-->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <RelativeLayout
                        android:id="@+id/rl_business_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/selector_item_bg"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/business_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="17805981911"
                            android:textSize="20sp"
                            android:layout_marginLeft="11dp"
                            android:layout_marginStart="11dp"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/image_phone"
                            android:layout_toEndOf="@+id/image_phone" />

                        <ImageView
                            android:id="@+id/image_phone"
                            android:layout_width="32dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:src="@mipmap/icon_phone"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:background="#66CCFF" />

                <!-- 1.2.1-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/shop_Address"
                        android:layout_marginEnd="14dp"
                        android:layout_marginRight="14dp"
                        app:srcCompat="@mipmap/icon_look" />

                    <ImageView
                        android:id="@+id/image_Address"
                        android:layout_width="32dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/icon_address"
                        android:layout_alignParentLeft="true" />

                    <TextView
                        android:id="@+id/shop_Address"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:autoLink="map"
                        android:ellipsize="end"
                        android:maxEms="15"
                        android:maxLines="2"
                        android:text="福建省福州市闽侯县上街镇福大学生街A1区"
                        android:textSize="15dp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/image_Address"
                        android:layout_marginLeft="11dp"
                        android:layout_marginStart="11dp" />

                </RelativeLayout>

            </LinearLayout>

            <!--2-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:orientation="vertical">

                <!--2.1-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="vertical">

                    <!--2.1.1-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_Date"
                            android:layout_width="32dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:src="@mipmap/icon_time"/>
                        <TextView
                            android:id="@+id/shop_Date"
                            android:layout_width="329dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:text="配送时间：10:00:00-23:59"
                            android:textSize="15dp" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="6dp"
                    android:background="#66CCFF" />

                <!--2.2-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <!--2.2.1-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:weightSum="1">

                        <ImageView
                            android:id="@+id/image_Service"
                            android:layout_width="32dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="0.03"
                            android:src="@mipmap/icon_service"/>
                        <TextView
                            android:id="@+id/shop_Service"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:autoLink="map"
                            android:ellipsize="end"
                            android:text="配送服务：由商家提供配送服务"
                            android:textSize="15dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!--3-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:orientation="vertical">

                <!--3.1-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="vertical">

                    <!--3.1.1-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/image_Daze"
                            android:layout_width="32dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:src="@mipmap/icon_hui"/>

                        <TextView
                            android:id="@+id/shop_Daze"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="满30减20；满60减25（在线支付专享）"
                            android:textSize="15dp" />

                    </LinearLayout>
                </LinearLayout>
                <!--3.2-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="vertical">

                    <!--3.2.1-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:weightSum="1">

                        <ImageView
                            android:id="@+id/image_Daze1"
                            android:layout_width="32dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:src="@mipmap/icon_dazhe" />

                        <TextView
                            android:id="@+id/shop_Daze1"
                            android:layout_width="329dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="折扣商品4.44折起（在线支付专享）"
                            android:textSize="15dp" />

                    </LinearLayout>
                </LinearLayout>
                <!--3.3-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <!--3.3.1-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_Daze2"
                            android:layout_width="32dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:src="@mipmap/icon_new_action" />

                        <TextView
                            android:id="@+id/shop_Daze2"
                            android:layout_width="253dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="新用户立减13元，首次使用银行卡支付再减3元（在线支付专享）"
                            android:textSize="15dp" />

                    </LinearLayout>
                </LinearLayout>
                <!--3.4-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="vertical">

                    <!--3.4.1-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_Daze3"
                            android:layout_width="32dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:src="@mipmap/icon_money" />

                        <TextView
                            android:id="@+id/shop_Daze3"
                            android:layout_width="329dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="该商家支持在线支付"
                            android:textSize="15dp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="203dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:gravity="center_vertical"
                        android:text="查看商家营业执照"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/Image_Look"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:src="@mipmap/icon_look" />

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>