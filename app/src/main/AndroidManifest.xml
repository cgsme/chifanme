<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tutu.chifanme">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- 启动界面 -->
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--主界面-->
        <activity android:name=".activity.HomeActivity" android:launchMode="singleInstance"/>
        <!--登录界面-->
        <activity android:name=".activity.LoginActivity" android:launchMode="singleInstance"/>
        <!--注册界面-->
        <activity android:name=".activity.RegisterActivity" android:launchMode="singleInstance"/>
        <!--商家详情页-->
        <activity android:name=".activity.BusinessDetailActivity"/>
        <!-- 提交订单界面 -->
        <activity android:name=".activity.CommitOrdersActivity" />
        <!-- 设置界面 -->
        <activity android:name=".activity.SettingActivity" />
        <!-- 关于我们界面 -->
        <activity android:name=".activity.AboutUsActivity"/>
        <!--搜索界面-->
        <activity android:name=".activity.SearchActivity"/>
    </application>

</manifest>